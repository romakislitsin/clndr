<div class="card-content">
  <p class="title">
    <%= @event.name %>
  </p>
  <p class="subtitle">
    <%= @event.start_time.strftime('%d.%m.%Y %H:%M')  %>
    by
    <%= @event.user.to_s  %>
  </p>
</div>
<% if current_user.can_edit?(@event) %>
  <%= link_to 'Edit', edit_event_path(@event), class: 'button is-warning is-outlined' %>
<% end %>
