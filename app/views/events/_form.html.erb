<div class="is-centered">

  <%= simple_form_for @event, html: { multipart: true } do |f| %>
    <%= f.error_notification %>

    <div class="field">
      <div class="control">
        <%= f.input :name, required: true, input_html: { class:"input" }, wrapper: false, label_html: { class:"label" } %>
      </div>
    </div>

    <div class="field">
      <div class="control">
        <%= f.input :start_time , required: true, input_html: { class: "datetime"}, wrapper: false, label_html: { class:"label" } %>
      </div>
    </div>


    <div class="field">
      <%= f.label :recurring %>
      <%= f.select_recurring :recurring, nil, allow_blank: true %>
    </div>

    <div class="field is-grouped">
      <div class="control">
        <%= f.button :submit, class: 'button is-warning' %>
        <%= link_to 'Cancel', events_path, class:'button is-light' %>
      </div>
    </div>

  <% end %>
</div>